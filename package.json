{
  "name": "cinema-world",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently 'npm:start:client' 'npm:start:server'",
    "dev": "concurrently 'npm:dev:client' 'npm:dev:server'",
    "start:client": "vite preview --port 8080 --host",
    "start:server": "node ./dist",
    "dev:client": "vite",
    "dev:server": "nodemon --exec ts-node src/server/src/index.ts",
    "build": "npm run build:client && npm run build:server",
    "build:server": "tsc -p ./src/server/tsconfig.json",
    "build:client": "vite build",
    "preview": "vite preview --port 80",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@prisma/client": "^5.13.0",
    "axios": "^1.6.8",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "buefy": "npm:@ntohq/buefy-next@^0.1.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pinia": "^2.1.7",
    "prisma": "^5.13.0",
    "vue": "^3.4.21",
    "vue-cookies": "^1.8.4",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.8.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.5",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "@vue/tsconfig": "^0.5.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.23.0",
    "nodemon": "^3.1.0",
    "npm-run-all2": "^6.1.2",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.0",
    "vite": "^5.2.8",
    "vite-plugin-vue-devtools": "^7.0.25",
    "vue-tsc": "^2.0.11"
  }
}
